# API Configuration
# Backend API base URL
# For local development, use: http://localhost:8000/api
# For production, update with your production API URL
VITE_API_BASE_URL=http://localhost:8000/api

# Application Configuration
VITE_APP_NAME=Document Management System
VITE_APP_VERSION=1.0.0

# Feature Flags
# Enable debug mode (default: true in development)
VITE_ENABLE_DEBUG=true
# Enable analytics tracking
VITE_ENABLE_ANALYTICS=false

# File Upload Configuration
# Maximum file size in bytes (default: 10MB = 10485760 bytes)
VITE_MAX_FILE_SIZE=10485760
# Allowed file types (comma-separated, no spaces)
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.xlsx,.xls

# Session Configuration
# Token refresh interval in milliseconds (default: 5 minutes = 300000 ms)
VITE_TOKEN_REFRESH_INTERVAL=300000

# Database Configuration (for Docker setup)
# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=document_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Backend Server Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000